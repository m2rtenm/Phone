@page
@model PhoneApp.Pages.EventTypes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Event Types</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventType[0].EventName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EventType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EventTypeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EventTypeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EventTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
