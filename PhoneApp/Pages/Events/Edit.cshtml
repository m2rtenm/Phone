@page
@model PhoneApp.Pages.Events.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Event.EventID" />
            <div class="form-group">
                <label asp-for="Event.EventTypeID" class="control-label"></label>
                <select asp-for="Event.EventTypeID" class="form-control" asp-items="ViewBag.EventTypeID"></select>
                <span asp-validation-for="Event.EventTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.RecordDate" class="control-label"></label>
                <input asp-for="Event.RecordDate" class="form-control" />
                <span asp-validation-for="Event.RecordDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.CallID" class="control-label"></label>
                <select asp-for="Event.CallID" class="form-control" asp-items="ViewBag.CallID"></select>
                <span asp-validation-for="Event.CallID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
